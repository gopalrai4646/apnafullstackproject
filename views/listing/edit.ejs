<% layout("/layout/boilerplate")-%>
  <body>
    <div class="row mt-3 ">
      <div class="col-8 offset-2">
    <h3>Edit your listing</h3>
    <form action="/listing/<%=listing._id%>?_method=PUT" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
      <div class="mb-2">
        <label for="title" class="form-label">Title</label>
        <input type="text" name="listing[title]" class="form-control" required value="<%=listing.title%>" />
        <div class="invalid-feedback">Please enter title as earlier</div>

      </div>
      <div class="mb-2">
        <label for="description" class="form-label">Description</label>
        <textarea type="text" name="listing[description]" required class="form-control">
          <%=listing.description%></textarea>
          <div class="invalid-feedback">Please enter description as earlier</div>

      </div>
      <div class="mb-2 me-3">
       Original Image <br>
<img src="<%=originalurl%>" />
      </div>
      <div class="mb-2">
        <label for="image" class="form-label">Upload new image</label>
        <input 
        type="file"
        name="listing[image]"
        id=""
        class="form-control"/>
      <div class="invalid-feedback">Please enter image URL/Link as earlier</div>
      </div>
      <div class="row">
      <div class="mb-2 col-md-4">
        <label for="price " class="form-label">Price</label>
        <input type="number" required name="listing[price]" value="<%=listing.price%>" class="form-control" />
        <div class="invalid-feedback">Please enter Price as earlier</div>

      </div>
      <div class="mb-2 col-md-8">
        <label for="country " class="form-label">Country</label>
        <input type="text" required name="listing[country]" value="<%=listing.country%>" class="form-control" />
        <div class="invalid-feedback">Please enter country as earlier</div>

      </div>
    </div>
      <div class="mb-2">
        <label for="location " class="form-label">Location</label>
        <input required
          type="text"
          name="listing[location]"
          value="<%=listing.location%>"
          class="form-control"
        />
        <div class="invalid-feedback">Please enter location as earlier</div>

      </div>
    
      <br /><br />
      <button class="btn btn-dark edit-btn">Add</button>
    </form> </div>
  </div>
  </body>
</html>
